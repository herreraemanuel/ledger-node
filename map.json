{
  "signup": {
    "required": ["fingerprint", "pin"]
  },
  "signin": {
    "required": ["fingerprint", "pin"]
  },

  "profile": {
    "secure": true
  },
  "vault": {
    "required": ["title", "caption", "balance", "currency"],
    "secure": true
  },
  "transaction": {
    "required": ["vault", "value", "title", "previousHash", "type"],
    "optional": ["timestamp", "tags"],
    "secure": true
  },
  "transactions": {
    "secure": true
  },
  "profile": {
    "cache": 120,
    "secure": true
  }
}
